<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:paddingHorizontal="@dimen/_30sdp"
    android:clipToPadding="false">
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/sportCricket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@android:color/transparent">

            <ImageView
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:importantForAccessibility="no"
                android:src="@drawable/cricket_player"/>

            <TextView
                android:id="@+id/cricketText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:text="Cricket"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/quicksand_semi_bold"
                android:textColor="@color/black"
                tools:ignore="HardcodedText" />
        </LinearLayout>
        <Space
            android:layout_width="@dimen/_30sdp"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/sportFootball"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@android:color/transparent">

            <ImageView
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:importantForAccessibility="no"
                android:src="@drawable/soccer_player"/>

            <TextView
                android:id="@+id/footballText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:text="Football"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/quicksand_semi_bold"
                android:textColor="@color/black"
                tools:ignore="HardcodedText" />
        </LinearLayout>
        <Space
            android:layout_width="@dimen/_30sdp"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/sportBasketball"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@android:color/transparent">

            <ImageView
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:importantForAccessibility="no"
                android:src="@drawable/basketball_player"/>

            <TextView
                android:id="@+id/basketballText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:text="Basketball"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/quicksand_semi_bold"
                android:textColor="@color/black"
                tools:ignore="HardcodedText" />
        </LinearLayout>
        <Space
            android:layout_width="@dimen/_30sdp"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/sportBadminton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@android:color/transparent">

            <ImageView
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:importantForAccessibility="no"
                android:src="@drawable/badminton_player"/>

            <TextView
                android:id="@+id/badmintonText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:text="Badminton"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/quicksand_semi_bold"
                android:textColor="@color/black"
                tools:ignore="HardcodedText" />
        </LinearLayout>
        <Space
            android:layout_width="@dimen/_30sdp"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/sportVolleyball"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@android:color/transparent">

            <ImageView
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:importantForAccessibility="no"
                android:src="@drawable/volleyball_player"/>

            <TextView
                android:id="@+id/volleyballText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:text="Volleyball"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/quicksand_semi_bold"
                android:textColor="@color/black"
                tools:ignore="HardcodedText" />
        </LinearLayout>
        <Space
            android:layout_width="@dimen/_30sdp"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/sportSwimming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@android:color/transparent">

            <ImageView
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:importantForAccessibility="no"
                android:src="@drawable/swimmer_player"/>

            <TextView
                android:id="@+id/swimmingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:text="Swimming"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/quicksand_semi_bold"
                android:textColor="@color/black"
                tools:ignore="HardcodedText" />
        </LinearLayout>

    </LinearLayout>
    
</HorizontalScrollView>
<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<LinearLayout
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".turfBooking.TurfInfo"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/imagesContainer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        app:cardCornerRadius="8dp"
        android:elevation="4dp"
        android:layout_margin="@dimen/_12sdp">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminateTint="@color/primary_green"/>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPagerImages"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_10sdp">

        <TextView
            android:id="@+id/infoName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_24ssp"
            android:fontFamily="@font/quicksand_semi_bold"
            android:textColor="@color/black"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/infoPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_24ssp"
            android:fontFamily="@font/quicksand_semi_bold"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_15sdp">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/star_svgrepo_com"
            tools:ignore="ContentDescription,ImageContrastCheck" />

        <Space
            android:layout_width="@dimen/_12sdp"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/infoRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_18ssp" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:text="See all reviews"
            android:textColor="@color/secondary_grey"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,TouchTargetSizeCheck" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_15sdp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/time_svgrepo_com"
            tools:ignore="ContentDescription" />

        <Space
            android:layout_width="@dimen/_12sdp"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/infoOpen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_18ssp"
            android:fontFamily="@font/quicksand_medium"
            android:textColor="@color/grey500"/>

        <TextView
            android:id="@+id/to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" to "
            android:textSize="@dimen/_18ssp"
            android:fontFamily="@font/quicksand_medium"
            android:textColor="@color/grey500"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/infoClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_18ssp"
            android:fontFamily="@font/quicksand_medium"
            android:textColor="@color/grey500"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_15sdp">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/location_icon"
            tools:ignore="ContentDescription" />

        <Space
            android:layout_width="@dimen/_12sdp"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/infoCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_18ssp"
            android:fontFamily="@font/quicksand_medium"
            android:textColor="@color/grey500"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/viewMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/secondary_grey"
            android:text="View on Map"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="@font/quicksand_medium"
            android:textColor="@color/white"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_15sdp">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Days Open:"
            android:textSize="@dimen/_18ssp"
            android:fontFamily="@font/quicksand_semi_bold"
            tools:ignore="HardcodedText" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/daysChips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false">
        </com.google.android.material.chip.ChipGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_15sdp">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Games Offered:"
            android:textSize="@dimen/_18ssp"
            android:fontFamily="@font/quicksand_semi_bold"
            tools:ignore="HardcodedText" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/gamesChips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false">
        </com.google.android.material.chip.ChipGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_30sdp">

        <GridLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:rowCount="1"
            android:columnCount="2"
            android:useDefaultMargins="true"
            tools:ignore="UselessParent">

            <Button
                android:id="@+id/addRating"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/secondary_grey"
                android:text="Rate us"
                app:cornerRadius="8dp"
                android:layout_columnWeight="1"
                android:textSize="@dimen/_16ssp"
                android:padding="@dimen/_8sdp"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/proceed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:backgroundTint="@color/primary_green"
                android:padding="@dimen/_8sdp"
                android:text="Proceed"
                android:textSize="@dimen/_16ssp"
                app:cornerRadius="8dp"
                tools:ignore="HardcodedText,TextContrastCheck" />

        </GridLayout>
    </LinearLayout>

</LinearLayout>
    </ScrollView>
</layout>